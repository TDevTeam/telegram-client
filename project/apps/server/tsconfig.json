{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "../../dist/apps/server",
    "target": "ESNext",
    "types": ["node"],
    "lib": ["es2020"],
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "include": ["**/*.ts"]
}
